- var title = 'HTTP Console';
- var description = 'HTTP testing and moking Service';
- var author = 'Ahmad Nassri';

doctype html
html(lang='en', itemscope, itemtype='http://schema.org/Product')
  head(prefix='og: http://ogp.me/ns# website: http://ogp.me/ns/website#')

    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='robots', content='index,follow')

    meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no')

    title= title
    meta(itemprop='name', content= title)
    meta(property='og:title', content= title)
    meta(name='twitter:title', content= title)

    link(rel='author', href='https://www.ahmadnassri.com/about')
    meta(name='author', content= author)
    meta(name='twitter:creator', content='@ahmadnassri')


    meta(name='description', content= description)
    meta(itemprop='description', content= description)
    meta(property='og:description', content= description)
    meta(name='twitter:description', content= description)

    meta(itemprop='image', content='https://httpconsole.com/share.jpg')
    meta(property='og:image', content='https://httpconsole.com/share.jpg')
    meta(name='twitter:image:src', content='https://httpconsole.com/share.jpg')

    meta(name='twitter:card', content='summary')
    meta(name='twitter:site', content='@ahmadnassri')
    meta(name='twitter:domain', content='httpconsole.com')

    link(rel='canonical', href='http://httpconsole.com/')
    meta(name='twitter:url', content='http://httpconsole.com/')
    meta(property='og:url', content='http://httpconsole.com/')


    meta(property='og:type', content='website')
    meta(property='og:site_name', content= title)
    meta(property='fb:admins', content='227304446')

    link(rel='icon', type='image/png', href='/static/favicon.png')
    link(rel='shortcut icon', href='/static/favicon.ico')

    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.2/css/bootstrap.min.css', media='all')
    link(rel='stylesheet', type='text/css', href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic,700italic|Source+Code+Pro:400,500,600,700', media='all')
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.3.0/css/font-awesome.css', media='all')
    link(rel='stylesheet', type='text/css', href='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/styles/tomorrow.min.css', media='all')
    link(rel='stylesheet', type='text/css', href='/static/style.css', media='all')

    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.1/js/bootstrap.min.js')
    script(type='text/javascript', src='https://cdnjs.cloudflare.com/ajax/libs/highlight.js/8.4/highlight.min.js')

  body(data-spy='scroll', data-target='.affix-container')
    header
      nav.navbar.navbar-default
        div.container
          div.navbar-header
            button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar

            div.navbar-brand.logo
              a(href='/')
                #[span.logo.fa.fa-terminal] #[strong HTTP] Console #[small.text-muted by #[a(href='https://www.mashape.com') Mashape]]

          div#navbar.collapse.navbar-collapse
            ul.nav.navbar-nav.navbar-right
              for link, name in [{name: 'Home', href: '/'}, {name: 'Docs', href: '/docs'}, {name: 'Create Bucket', href: '/bucket/create'}]
                li(class={active: path === link.href}): a(href= link.href)= link.name

    div.content
      block content

    footer
      nav.navbar.navbar-default.navbar-fixed-bottom
        div.container
          ul.nav.navbar-nav.hidden-xs
            li: a(href='https://github.com/ahmadnassri/httpconsole/') Open Source
            li: a(href='https://github.com/ahmadnassri/httpconsole/issues') Issues
            li: a(href='https://github.com/ahmadnassri/httpconsole/watchers') Watch
            li: a(href='https://github.com/ahmadnassri/httpconsole/stargazers') Star
            li: a(href='https://github.com/ahmadnassri/httpconsole/network') Fork

          ul.nav.navbar-nav.navbar-right
            li: p.navbar-text Made with #[span.text-danger &hearts;] at #[a(href='https://www.mashape.com/') Mashape]

      block scripts

